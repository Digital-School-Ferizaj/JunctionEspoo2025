{
  "name": "amily",
  "private": true,
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "dev": "npm-run-all --parallel dev:web dev:server",
    "dev:server": "npm run dev --workspace apps/server",
    "dev:web": "npm run dev --workspace apps/web",
    "build": "npm-run-all build:server build:web",
    "build:server": "npm run build --workspace apps/server",
    "build:web": "npm run build --workspace apps/web",
    "test": "npm-run-all --parallel test:server test:web",
    "test:server": "npm run test --workspace apps/server",
    "test:web": "npm run test --workspace apps/web"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5"
  }
}


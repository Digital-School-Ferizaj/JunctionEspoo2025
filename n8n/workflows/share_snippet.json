{
  "name": "Share Snippet",
  "nodes": [
    {
      "parameters": {
        "path": "share-snippet",
        "options": {
          "responseCode": 200,
          "responseMode": "onReceived"
        }
      },
      "id": "Webhook",
      "name": "Share Webhook",
      "type": "n8n-nodes-base.webhook",
      "typeVersion": 1,
      "position": [200, 300]
    },
    {
      "parameters": {
        "fromEmail": "{{ $env.N8N_FROM_EMAIL }}",
        "toEmail": "={{$json[\"to_user_id\"]}}",
        "subject": "New MemoryLane snippet",
        "html": "<p>You have a new snippet:</p><p><a href='{{$json[\"url\"]}}'>Open snippet</a></p>"
      },
      "id": "SendEmail",
      "name": "Send Share Email",
      "type": "n8n-nodes-base.emailSend",
      "typeVersion": 1,
      "position": [520, 300]
    }
  ],
  "connections": {
    "Share Webhook": {
      "main": [
        [
          {
            "node": "Send Share Email",
            "type": "main",
            "index": 0
          }
        ]
      ]
    }
  }
}
